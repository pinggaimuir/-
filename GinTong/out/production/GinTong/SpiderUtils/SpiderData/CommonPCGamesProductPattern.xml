<?xml version="1.0" encoding="UTF-8" ?>
<CommonPCGamesProductPattern>
    <spider>
        <!--游戏标题-->
        <title>//dd[@class='bt clearfix']/a/text()</title>
        <!--游戏logo-->
        <logo>//dl[@class='game_left clearfix']/dt/img/@src</logo>
        <!--游戏正文-->
        <content>//div[@class='Introduction']/p</content>
        <!--游戏截图-->
        <contentPic>//ul[@class='clearfix']/li/span/a/img/@src</contentPic>
        <!--游戏类型-->
        <gameType>//dl[@class='game_left clearfix']/dd[2]/text()</gameType>
        <!--战斗方式-->
        <CombatMode>//dl[@class='game_left clearfix']/dd[5]/text()</CombatMode>
        <!--游戏画面-->
        <gamespy>//dl[@class='game_left clearfix']/dd[4]/text()</gamespy>
        <!--收费方式-->
        <charge_mode>//dl[@class='game_left clearfix']/dd[7]/text()</charge_mode>
        <!--研发公司-->
        <develop_com>//dl[@class='game_left clearfix']/dd[8]/allText()</develop_com>
        <!--抓取方式-->
        <flag>jsoup</flag>
        <!--游戏题材-->
        <gtheme>//dl[@class='game_left clearfix']/dd[3]/text()</gtheme>
        <!--官网链接-->
        <webURL>//a[@class='jrgw']/@href</webURL>
        <!--详情页链接-->
        <childLink join="">//ul[@class='game_dq_list']/li/a/@href</childLink>
        <!--下一页-->
        <nextPage join="http://cs.kaifu.com/">//span[@class='next']/a/@href</nextPage>
        <!--数据源-->
        <source>开服网</source>
    </spider>
</CommonPCGamesProductPattern>