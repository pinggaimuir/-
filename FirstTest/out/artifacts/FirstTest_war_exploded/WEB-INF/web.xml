<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <!--checkSelvlet-->
    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>August_24.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/checkServlet</url-pattern>
    </servlet-mapping>
    <!--loginServlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>August_24.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <!--测试servletTest1-->
    <servlet>
        <servlet-name>servletTest</servlet-name>
        <servlet-class>August_24.ServletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletTest</servlet-name>
        <url-pattern>/servletTest</url-pattern>
    </servlet-mapping>
    <!--sevletDispatcher-->
    <servlet>
        <servlet-name>servletDispatcher</servlet-name>
        <servlet-class>August_24.ServletDispatcher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletDispatcher</servlet-name>
        <url-pattern>/servlet/servletDispatcher</url-pattern>
    </servlet-mapping>
    <!--foFilter方法，过滤编码-->
    <filter>
        <filter-name>filterEncoding</filter-name>
        <filter-class>August_27.FilterEnconding1</filter-class>
        <init-param>
            <param-name>Encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>filterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Response的setHeader测试-->
    <servlet>
        <servlet-name>ServletsetHeaders</servlet-name>
        <servlet-class>August_27.ServletSetHeaders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletsetHeaders</servlet-name>
        <url-pattern>/Servlet/setHeaders</url-pattern>
    </servlet-mapping>

    <!--欢迎页面-->
    <welcome-file-list>
       <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
